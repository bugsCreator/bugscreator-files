{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "types": ["node", "express", "express-session"]
  },
  "include": [
    "server.ts",
    "controllers/**/*.ts",
    "routes/**/*.ts",
    "models/**/*.ts",
    "middlewares/**/*.ts",
    "types/**/*.d.ts"
  ]
}
