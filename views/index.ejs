<section>
  <h1 class="text-2xl font-semibold mb-4">Recent Public Files</h1>
  <div class="grid gap-3">
    <% if ((recentPublic||[]).length === 0) { %>
      <p class="text-gray-600">No files yet.</p>
    <% } %>
    <% (recentPublic||[]).forEach(f => { %>
      <div class="bg-white p-4 shadow rounded flex items-center justify-between">
        <div>
          <div class="font-medium"><%= f.originalName %></div>
          <div class="text-xs text-gray-500"><%= (f.size/1024).toFixed(1) %> KB â€¢ <%= f.mimeType %></div>
        </div>
        <% if (f.slug) { %>
          <a class="text-blue-600 hover:underline text-sm" href="/files/slug/<%= f.slug %>">Download</a>
        <% } else { %>
          <a class="text-blue-600 hover:underline text-sm" href="/files/<%= f._id %>/download">Download</a>
        <% } %>
      </div>
    <% }) %>
  </div>
</section>
