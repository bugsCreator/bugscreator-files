<section>
  <h1 class="text-xl sm:text-2xl font-semibold mb-4">Recent Public Files</h1>
  <div class="grid gap-3">
    <% if ((recentPublic||[]).length === 0) { %>
      <p class="text-gray-600">No files yet.</p>
    <% } %>
    <% (recentPublic||[]).forEach(f => { %>
      <div class="bg-white p-4 shadow rounded flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
        <div class="min-w-0">
          <div class="font-medium"><%= f.originalName %></div>
          <div class="text-xs text-gray-500"><%= (f.size/1024).toFixed(1) %> KB â€¢ <%= f.mimeType %></div>
        </div>
        <div>
        <% if (f.slug) { %>
          <a class="text-blue-600 hover:underline text-sm inline-block" href="/files/slug/<%= f.slug %>">Download</a>
        <% } else { %>
          <a class="text-blue-600 hover:underline text-sm inline-block" href="/files/<%= f._id %>/download">Download</a>
        <% } %>
        </div>
      </div>
    <% }) %>
  </div>
</section>
