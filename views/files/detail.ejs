<h1 class="text-xl sm:text-2xl font-semibold mb-4">File Details</h1>
<div class="bg-white p-6 shadow rounded">
  <div class="grid gap-2">
    <div><span class="font-medium">Name:</span> <%= file.originalName %></div>
    <div><span class="font-medium">Size:</span> <%= (file.size/1024).toFixed(1) %> KB</div>
    <div><span class="font-medium">MIME:</span> <%= file.mimeType %></div>
    <div><span class="font-medium">Access:</span> <%= file.access %></div>
    <div><span class="font-medium">Downloads:</span> <%= file.downloads %></div>
    <% if (file.slug) { %>
      <div><span class="font-medium">Slug:</span> <code><%= file.slug %></code></div>
      <div><span class="font-medium">Slug URL:</span> <a class="text-blue-600 hover:underline" href="/files/slug/<%= file.slug %>">/files/slug/<%= file.slug %></a></div>
    <% } %>
    <div><span class="font-medium">ID:</span> <code><%= file._id %></code></div>
    <div><span class="font-medium">Created:</span> <%= new Date(file.createdAt).toLocaleString() %></div>
    <div><span class="font-medium">Updated:</span> <%= new Date(file.updatedAt).toLocaleString() %></div>
  </div>
  <div class="mt-4 flex flex-col sm:flex-row sm:items-center gap-3">
    <% if (file.slug) { %>
      <a class="bg-blue-600 text-white px-4 py-2 rounded text-center sm:inline-block" href="/files/slug/<%= file.slug %>">Download</a>
      <a class="text-sm text-gray-700 hover:underline" href="/files/slug/<%= file.slug %>/details">Permalink</a>
    <% } else { %>
      <a class="bg-blue-600 text-white px-4 py-2 rounded text-center sm:inline-block" href="/files/<%= file._id %>/download">Download</a>
    <% } %>
    <a class="text-sm text-gray-700 hover:underline" href="/files">Back to files</a>
  </div>
</div>
