<h1 class="text-2xl font-semibold mb-4">Files</h1>

<h2 class="text-xl font-medium mt-6 mb-2">Public Files</h2>
<div class="grid gap-3">
  <% if ((publicFiles || []).length === 0) { %>
    <p class="text-gray-600">No public files.</p>
  <% } %>
  <% for (const f of (publicFiles || [])) { %>
    <div class="bg-white p-4 shadow rounded flex items-center justify-between">
      <div>
        <div class="font-medium"><%= f.originalName %></div>
        <div class="text-xs text-gray-500"><%= (f.size/1024).toFixed(1) %> KB • <%= f.mimeType %></div>
      </div>
      <% if (f.slug) { %>
        <a class="text-blue-600 hover:underline text-sm" href="/files/slug/<%= f.slug %>">Download</a>
      <% } else { %>
        <a class="text-blue-600 hover:underline text-sm" href="/files/<%= f._id %>/download">Download</a>
      <% } %>
    </div>
  <% } %>
</div>

